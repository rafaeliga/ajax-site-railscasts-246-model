<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) || "Untitled" %></title>
		
		<script>if ( typeof window.JSON === 'undefined' ) { document.write('<script src="/javascripts/history/json2.js"><\/script>'); }</script>
		<script src="/javascripts/history/amplify.store.js"></script>
		
    <%= stylesheet_link_tag "application" %>

		<script src="/javascripts/history/history.js"></script>
		<script src="/javascripts/history/history.html4.js"></script>
		
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
			<%= render :partial => "/layouts/menu" %>
			<div id="yield">
      	<%= content_tag :h1, yield(:title) if show_title? %>
      	<%= yield %>
			</div>
    </div>
  </body>
</html>
